#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>																		
#include <conio.h>
#include <windows.h>
int main(void)
{
	printf("Welcome to the Mini game, you son of bitch!\n\n");
	printf("Press any key to continue...\n");
	int ch3 = _getch();

	char board[10][10] = { {'#', '#', '#', '#', '#', '.', '.', '.', '.', '.' },
		{'.', '.', '.', '.', '.', '#', '.', '.', '.', '.'},
		{'#', '#', '#', '.', '#', '.', '.', '.', '.', '.'},
		{'.', '.', '#', '.', '.', '#', '.', '.', '.', '.'},
		{'.', '.', '#', '.', '.', '#', '.', '.', '.', '.'},
		{'.', '.', '#', '.', '.', '#', '.', '.', '.', '.'},
		{'.', '.', '.', '#', '.', '.', '#', '#', '.', '.'},
		{'.', '.', '.', '.', '#', '.', '.', '.', '#', '#'},
		{'.', '.', '.', '.', '.', '#', '.', '.', '.', '.'},
		{'.', '.', '.', '.', '.', '#', '#', '#', '#', '#'} };

	int life = 3; //생명은 3개
	int pass; //통과 여부를 확인함.

	while (life != 0) { //생명 3개를 전부 소진할때까지 반복
		int xpos = 0, ypos = 1; //처음 시작은 (0, 1)
		board[ypos][xpos] = '@';
		pass = 1; //#에 닿기 전까지는 성공으로 간주함.

		//사용자로부터 위치를 받아서 보드에 표시.
		while (1) {
			system("cls");
			printf("왼쪽이동 : ←, 오른쪽이동 : →, 위쪽이동 : ↑, 아래쪽이동 : ↓\n\n");
			printf("현재 생명 : %d개\n\n", life);

			for (int y = 0; y < 10; y++) {
				for (int x = 0; x < 10; x++)
					printf("%c", board[y][x]);
				printf("\n");
			}

			board[ypos][xpos] = '.';
			int ch = _getch();
			if (ch == 224) {
				int ch2 = _getch();
				if (ch2 == 75) xpos--;
				else if (ch2 == 80) ypos++;
				else if (ch2 == 72) ypos--;
				else if (ch2 == 77) xpos++;
			}

			if (ypos == 10 || xpos == 10) //목적지(10, 10)까지 다다르면 반복문 빠져나감
				break;

			if (board[ypos][xpos] == '#')
			{
				life--;
				pass = 0;
				break; //벽에 닿으면 이 반복문을 빠져나가서 생명 하나를 차감하고 다시 이 반복문으로 진입한다.
			}
			else {
				board[ypos][xpos] = '@';
			}
		}
		if (pass) //기본값은 1.
		{
			printf("\n");
			printf("Success!\n");
			break;
		}
		else
		{
			printf("\n");
			printf("Failed.\n");
		}
	}
	printf("\n");
	printf("게임 끝.\n");
	return 0;
}
